{
  "compilerOptions": {
    "target": "es6",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./dist/rules-engine.js",
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/**", "coverage"]
}
